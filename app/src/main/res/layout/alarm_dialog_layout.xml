<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rg_alarm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15sp">

    <RadioButton
        android:id="@+id/rb_at_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="At time of the event" />

    <RadioButton
        android:id="@+id/rb_5_mins_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 minutes before" />

    <RadioButton
        android:id="@+id/rb_15_mins_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 minutes before" />

    <RadioButton
        android:id="@+id/rb_30_mins_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30 minutes before" />

    <RadioButton
        android:id="@+id/rb_1_hour_before"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 hour before" />

    <RadioButton
        android:id="@+id/rb_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom..." />

    <TimePicker
        android:id="@+id/tp_alarm"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:headerTimeTextAppearance="@color/colorAccent"
        android:numbersInnerTextColor="@color/colorAccent"
        android:numbersSelectorColor="@color/colorAccent"
        android:numbersTextColor="@color/black"
        android:theme="@style/Widget.Material3.MaterialTimePicker.Custom"
        style="@style/Widget.Material3.MaterialTimePicker.Custom"
        android:timePickerMode="spinner"
        />



</RadioGroup>