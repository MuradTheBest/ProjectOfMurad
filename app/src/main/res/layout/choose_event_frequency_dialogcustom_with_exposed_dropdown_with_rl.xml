<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout_frequency"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:gravity="center"
    android:divider="@color/gray"
    android:showDividers="middle">



    <LinearLayout
        android:id="@+id/ll_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        >

        <TextView
            android:id="@+id/tv_repeat"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Repeats once in"
            android:textSize="16sp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout_frequency"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/textInputLayout_frequencyType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="1"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:id="@+id/textInputLayout_frequencyType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Frequency Type"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <AutoCompleteTextView
                    android:id="@+id/autoCompleteTextView_frequencyType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="5dp"

        android:layout_below="@+id/ll_frequency"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        >

        <RadioButton
            android:id="@+id/rb_with_day_and_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't repeat" />

        <RadioButton
            android:id="@+id/rb_with_dayOfWeek_and_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Every day" />

        <RadioButton
            android:id="@+id/rb_with_day_and_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't repeat" />

        <RadioButton
            android:id="@+id/rb_with_dayOfWeek_and_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Every day" />

        <RadioButton
            android:id="@+id/rb_never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Don't repeat" />

    </RadioGroup>

    <LinearLayout
        android:id="@+id/choose_day_of_week_layout"
        android:layout_width="238sp"
        android:layout_height="38sp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:weightSum="7"
        android:layout_marginHorizontal="10sp"
        android:clipToPadding="false"

        android:layout_below="@+id/rg_repeat"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        >

        <ToggleButton
            android:id="@+id/tb_Sunday"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginHorizontal="2sp"
            android:textOff="S"
            android:textOn="S"
            android:textSize="14sp"
            style="@style/toggleButton"
            android:background="@drawable/toggle_bg"
            android:checked="true"/>

        <ToggleButton
            android:id="@+id/tb_Monday"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginHorizontal="2sp"
            android:textOff="M"
            android:textOn="M"
            android:textSize="14sp"
            style="@style/toggleButton"
            android:background="@drawable/toggle_bg"
            android:checked="true"/>

        <ToggleButton
            android:id="@+id/tb_Tuesday"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginHorizontal="2sp"
            android:textOff="T"
            android:textOn="T"
            android:textSize="14sp"
            style="@style/toggleButton"
            android:background="@drawable/toggle_bg"
            android:checked="true"/>

        <ToggleButton
            android:id="@+id/tb_Wednesday"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginHorizontal="2sp"
            android:textOff="W"
            android:textOn="W"
            android:textSize="14sp"
            style="@style/toggleButton"
            android:background="@drawable/toggle_bg"
            android:checked="true"/>

        <ToggleButton
            android:id="@+id/tb_Thursday"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginHorizontal="2sp"
            android:textOff="T"
            android:textOn="T"
            android:textSize="14sp"
            style="@style/toggleButton"
            android:background="@drawable/toggle_bg"
            android:checked="true"/>

        <ToggleButton
            android:id="@+id/tb_Friday"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginHorizontal="2sp"
            android:textOff="F"
            android:textOn="F"
            android:textSize="14sp"
            style="@style/toggleButton"
            android:background="@drawable/toggle_bg"
            android:checked="true"/>

        <ToggleButton
            android:id="@+id/tb_Saturday"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginHorizontal="2sp"
            android:textOff="S"
            android:textOn="S"
            android:textSize="14sp"
            style="@style/toggleButton"
            android:background="@drawable/toggle_bg"
            android:checked="true"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choose_day_of_week_layout"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/rb_times"
            app:layout_constraintTop_toTopOf="@+id/rb_times"
            app:layout_constraintBottom_toBottomOf="@id/rb_times"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="2"
            android:text="1"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rg_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_duration"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:gravity="start"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Times in total: "/>

            <!--<com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:text="1"
                android:textSize="16sp" />-->


            <RadioButton
                android:id="@+id/rb_until"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Until " />

        </RadioGroup>

