<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout_frequency"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10sp"
    android:clipToPadding="false">

    <RadioGroup
        android:id="@+id/rg_repeat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:divider="@color/gray"
        android:showDividers="middle">


        <RadioButton
            android:id="@+id/rb_never"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't repeat" />

        <RadioButton
            android:id="@+id/rb_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Every day" />

        <RadioButton
            android:id="@+id/rb_dayOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Every week"
            android:textSize="16sp"/>

        <LinearLayout
            android:id="@+id/choose_day_of_week_layout"
            android:layout_width="238sp"
            android:layout_height="38sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:weightSum="7"
            android:layout_marginHorizontal="10sp"
            android:clipToPadding="false"
            >

            <ToggleButton
                android:id="@+id/tb_Sunday"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginHorizontal="2sp"
                android:textOff="S"
                android:textOn="S"
                android:textSize="14sp"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

            <ToggleButton
                android:id="@+id/tb_Monday"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginHorizontal="2sp"
                android:textOff="M"
                android:textOn="M"
                android:textSize="14sp"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

            <ToggleButton
                android:id="@+id/tb_Tuesday"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginHorizontal="2sp"
                android:textOff="T"
                android:textOn="T"
                android:textSize="14sp"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

            <ToggleButton
                android:id="@+id/tb_Wednesday"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginHorizontal="2sp"
                android:textOff="W"
                android:textOn="W"
                android:textSize="14sp"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

            <ToggleButton
                android:id="@+id/tb_Thursday"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginHorizontal="2sp"
                android:textOff="T"
                android:textOn="T"
                android:textSize="14sp"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

            <ToggleButton
                android:id="@+id/tb_Friday"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginHorizontal="2sp"
                android:textOff="F"
                android:textOn="F"
                android:textSize="14sp"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

            <ToggleButton
                android:id="@+id/tb_Saturday"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginHorizontal="2sp"
                android:textOff="S"
                android:textOn="S"
                android:textSize="14sp"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

        </LinearLayout>

        <RadioButton
            android:id="@+id/rb_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Every month" />

        <RadioButton
            android:id="@+id/rb_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Every year" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>