        <RadioGroup
            android:id="@+id/rg_repeat_for_month"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:weightSum="4">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_with_day_and_month"
                style="@style/radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Every month on 8 day"
                android:textSize="16sp" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_with_last_day_and_month"
                style="@style/radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Every month on last day"
                android:textSize="16sp" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_with_dayOfWeek_and_month"
                style="@style/radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Every month on 2 Tuesday"
                android:textSize="16sp" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/rb_with_last_dayOfWeek_and_month"
                style="@style/radioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Every month on last Tuesday"
                android:textSize="16sp" />

        </RadioGroup>


        <RadioGroup
            android:id="@+id/rg_repeat_for_year"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:layout_margin="5dp" >

            <RadioButton
                style="@style/radioButton"
                android:id="@+id/rb_with_day_and_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="Every year on 8 of January" />

            <RadioButton
                style="@style/radioButton"
                android:id="@+id/rb_with_last_day_and_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="Every year on last day of January" />

            <RadioButton
                android:id="@+id/rb_with_dayOfWeek_and_year"
                style="@style/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Every year on 2 Sunday of January"
                android:textSize="16sp" />

            <RadioButton
                style="@style/radioButton"
                android:id="@+id/rb_with_last_dayOfWeek_and_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="Every year on last Sunday of January" />

            <!--            <RadioButton
                            style="@style/radioButton"
                            android:id="@+id/rb_never"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Don't repeat" />-->

        </RadioGroup>

        <LinearLayout
            android:id="@+id/choose_day_of_week_layout"
            android:layout_width="266sp"
            android:layout_height="46sp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:weightSum="7"
            android:layout_marginHorizontal="10sp"
            android:clipToPadding="false"
            android:layout_marginVertical="5sp"
            >

            <ToggleButton
                android:id="@+id/tb_Sunday"
                android:layout_width="34sp"
                android:layout_height="34sp"
                android:layout_marginHorizontal="2sp"
                android:textSize="16sp"
                android:textOff="S"
                android:textOn="S"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

            <ToggleButton
                android:id="@+id/tb_Monday"
                android:layout_width="34sp"
                android:layout_height="34sp"
                android:layout_marginHorizontal="2sp"
                android:textSize="16sp"
                android:textOff="M"
                android:textOn="M"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

            <ToggleButton
                android:id="@+id/tb_Tuesday"
                android:layout_width="34sp"
                android:layout_height="34sp"
                android:layout_marginHorizontal="2sp"
                android:textSize="16sp"
                android:textOff="T"
                android:textOn="T"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

            <ToggleButton
                android:id="@+id/tb_Wednesday"
                android:layout_width="34sp"
                android:layout_height="34sp"
                android:layout_marginHorizontal="2sp"
                android:textSize="16sp"
                android:textOff="W"
                android:textOn="W"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

            <ToggleButton
                android:id="@+id/tb_Thursday"
                android:layout_width="34sp"
                android:layout_height="34sp"
                android:layout_marginHorizontal="2sp"
                android:textSize="16sp"
                android:textOff="T"
                android:textOn="T"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

            <ToggleButton
                android:id="@+id/tb_Friday"
                android:layout_width="34sp"
                android:layout_height="34sp"
                android:layout_marginHorizontal="2sp"
                android:textSize="16sp"
                android:textOff="F"
                android:textOn="F"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

            <ToggleButton
                android:id="@+id/tb_Saturday"
                android:layout_width="34sp"
                android:layout_height="34sp"
                android:layout_marginHorizontal="2sp"
                android:textSize="16sp"
                android:textOff="S"
                android:textOn="S"
                style="@style/toggleButton"
                android:background="@drawable/toggle_bg"
                android:checked="true"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="5dp"
                android:text="Duration:"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/rg_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    style="@style/radioButton"
                    android:id="@+id/rb_never"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Never"
                    android:textSize="16sp"
                    android:checked="false"/>

                <RadioButton
                    style="@style/radioButton"
                    android:id="@+id/rb_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Times in total: "
                    android:textSize="16sp"
                    android:checked="true"/>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/textInputLayout_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_times"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="2"
                        android:text="1"
                        android:selectAllOnFocus="true"
                        android:focusableInTouchMode="false"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!--<com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="2"
                    android:text="1"
                    android:textSize="16sp" />-->

                <RadioButton
                    style="@style/radioButton"
                    android:id="@+id/rb_until"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/until"
                    android:textSize="16sp"
                    />

                <DatePicker
                    android:animateLayoutChanges="true"
                    android:id="@+id/date_picker_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:outlineSpotShadowColor="@color/colorAccent"
                    android:outlineAmbientShadowColor="@color/colorAccent"
                    android:headerBackground="@color/colorAccent"
                    android:backgroundTint="@color/colorAccent"
                    android:headerDayOfMonthTextAppearance="@color/colorAccent"
                    android:calendarTextColor="@color/colorAccent"
                    android:dayOfWeekBackground="@color/colorAccent"
                    android:foregroundGravity="center"
                    android:spinnersShown="false"
                    android:calendarViewShown="true"
                    android:datePickerMode="calendar"
                    android:scrollbars="none"

                    style="@style/MyCustomCalendarView"
                    android:theme="@style/MyCustomCalendarView"

                    />

            </RadioGroup>


        </LinearLayout>




