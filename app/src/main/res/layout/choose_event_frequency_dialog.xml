<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollview_frequency"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioGroup
        android:id="@+id/rg_repeat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <RadioButton
            android:id="@+id/rb_never"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't repeat" />

        <RadioButton
            android:id="@+id/rb_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Every day" />

        <RadioButton
            android:id="@+id/rb_dayOfWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Every week" />

        <RadioButton
            android:id="@+id/rb_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Every month" />

        <RadioButton
            android:id="@+id/rb_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Every year" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>