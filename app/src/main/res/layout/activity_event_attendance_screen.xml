<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calendar.Event_Attendance_Screen"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_event_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="Name: "
        android:textAlignment="textStart"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_event_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:text="Description: "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_event_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_event_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_name" />

    <TextView
        android:id="@+id/tv_event_place"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="Place: "
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_event_description"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_event_description"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_description" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/tv_event_place"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_event_place"
        app:layout_constraintTop_toBottomOf="@+id/tv_event_place">

        <TextView
            android:id="@+id/tv_event_start_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:text="Starting time: 10.05.2021, 10:45"/>

        <TextView
            android:id="@+id/tv_event_end_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:text="Ending time: 15.05.2021, 12:00"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_users"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <!--below is the view for our shimmer-->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_rv_users"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:shimmer_repeat_mode="restart"
        app:shimmer_direction="left_to_right"
        app:shimmer_dropoff="30"
        app:shimmer_base_alpha="0.3"
        app:shimmer_highlight_alpha="0.8"
        app:shimmer_clip_to_children="true"
        app:shimmer_shape="linear">

        <!--For shimmer we are creating a same
            layout but setting its background
            as a gray colour and not providing
            any view inside it-->
        <!--<ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                &lt;!&ndash;below we are displaying multiple
                 shimmer layouts using include
                 to show them in list format&ndash;&gt;
                <include layout="@layout/user_shimmer_layout" />
                <include layout="@layout/user_shimmer_layout" />
                <include layout="@layout/user_shimmer_layout" />
                <include layout="@layout/user_shimmer_layout" />
                <include layout="@layout/user_shimmer_layout" />
                <include layout="@layout/user_shimmer_layout" />
                <include layout="@layout/user_shimmer_layout" />
                <include layout="@layout/user_shimmer_layout" />
                <include layout="@layout/user_shimmer_layout" />

            </LinearLayout>

        </ScrollView>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--below we are displaying multiple
             shimmer layouts using include
             to show them in list format-->
            <include layout="@layout/user_shimmer_layout" />
            <include layout="@layout/user_shimmer_layout" />
            <include layout="@layout/user_shimmer_layout" />
            <include layout="@layout/user_shimmer_layout" />
            <include layout="@layout/user_shimmer_layout" />
            <include layout="@layout/user_shimmer_layout" />
            <include layout="@layout/user_shimmer_layout" />
            <include layout="@layout/user_shimmer_layout" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>