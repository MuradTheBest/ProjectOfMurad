        </LinearLayout>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            app:layout_constraintBottom_toTopOf="@id/btn_repeat"
            app:layout_constraintEnd_toEndOf="@+id/ll_end"
            app:layout_constraintStart_toStartOf="@+id/ll_end"
            app:layout_constraintTop_toBottomOf="@+id/ll_end"
            app:layout_constraintVertical_bias="0.0"
            card_view:cardElevation="5dp"
            card_view:cardCornerRadius="5dp"
            >

            <TimePicker
                android:id="@+id/event_time_picker"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="70dp"
                android:layout_gravity="center"
                android:headerTimeTextAppearance="@color/colorAccent"
                android:numbersInnerTextColor="@color/colorAccent"
                android:numbersSelectorColor="@color/colorAccent"
                android:numbersTextColor="@color/black"
                android:theme="@style/Widget.Material3.MaterialTimePicker.Custom"
                style="@style/Widget.Material3.MaterialTimePicker.Custom"
                android:timePickerMode="spinner"
                />


        </androidx.cardview.widget.CardView>

        <DatePicker
            android:animateLayoutChanges="true"
            android:id="@+id/date_picker_end"
            android:layout_width="wrap_content"
            android:transitionGroup="true"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="40"
            android:calendarViewShown="true"
            android:datePickerMode="calendar"
            android:scrollbars="none"
            style="@style/MyCustomCalendarView"
            android:theme="@style/MyCustomCalendarView"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/btn_repeat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:paddingStart="5dp"
            app:drawableTint="@drawable/checked_text_view_text_color"
            app:drawableStartCompat="@drawable/ic_baseline_repeat_24"
            android:drawablePadding="3dp"
            android:hint="@string/does_not_repeat"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/ll_end"
            app:layout_constraintStart_toStartOf="@+id/ll_end"
            app:layout_constraintTop_toBottomOf="@+id/ll_end" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_weight="1"
            android:text="Set Alarm"
            android:textSize="18sp"
            android:drawableStart="@drawable/alarm_icon"
            android:drawableTint="@drawable/checked_text_view_text_color"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            style="@style/Widget.AppCompat.CompoundButton.Switch"
            android:theme="@style/Widget.AppCompat.CompoundButton.Switch"
            app:useMaterialThemeColors="false"
            />

        <EditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/description"
            android:importantForAutofill="no"
            android:inputType="textCapSentences"
            android:drawableStart="@drawable/ic_baseline_subject_24"
            android:drawableTint="@color/black"
            android:singleLine="false"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_repeat"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/et_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/place"
            android:importantForAutofill="no"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:drawableTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/et_description"
            app:layout_constraintStart_toStartOf="@+id/et_description"
            app:layout_constraintTop_toBottomOf="@+id/et_description"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/ll_manage_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/et_place"
            app:layout_constraintStart_toStartOf="@+id/et_place"
            app:layout_constraintTop_toBottomOf="@+id/et_place"
            app:layout_constraintVertical_bias="0.0">

            <Button
                android:id="@+id/btn_delete_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:text="Delete event"
                android:textSize="14sp" />


        </LinearLayout>


    </LinearLayout>

</ScrollView>