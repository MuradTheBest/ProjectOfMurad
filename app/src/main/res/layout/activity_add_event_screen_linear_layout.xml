            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/ib_color"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignTop="@id/et_name"
                android:layout_alignEnd="@id/et_name"
                android:layout_alignBottom="@id/et_name"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_baseline_choose_color_24"
                android:tint="@color/colorAccent"
                app:layout_constraintBottom_toBottomOf="@+id/et_name"
                app:layout_constraintEnd_toEndOf="@+id/et_name"
                app:layout_constraintTop_toTopOf="@+id/et_name" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_all_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_weight="1"
                android:text="@string/all_day"
                android:textSize="18sp"
                android:drawableStart="@drawable/ic_baseline_access_time_24"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                style="@style/Widget.AppCompat.CompoundButton.Switch"
                android:theme="@style/Widget.AppCompat.CompoundButton.Switch"
                app:layout_constraintTop_toBottomOf="@+id/et_name"
                app:useMaterialThemeColors="false"
                />

