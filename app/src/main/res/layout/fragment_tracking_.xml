    <FrameLayout
        android:id="@+id/bottom_sheet_training"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        app:behavior_peekHeight="110dp"
        android:background="@drawable/bottom_sheet_training_background"
        android:backgroundTint="@color/white"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <include layout="@layout/bottom_sheet_training_collapsed" />

        <include
            android:visibility="gone"
            layout="@layout/bottom_sheet_training_expanded"
            />

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


