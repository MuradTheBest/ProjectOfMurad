<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    tools:context=".calendar.Add_Event_Screen"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:padding="15dp"

    >

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Enter name"
        android:textSize="20sp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="20dp"
        android:autofillHints="name"

        />

    <!--<androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/et_name"
        app:layout_constraintEnd_toEndOf="@+id/et_name"
        app:layout_constraintTop_toTopOf="@+id/et_name"
        android:layout_marginEnd="7dp"
        android:background="@drawable/ic_baseline_circle_24"
        android:backgroundTint="@color/colorAccent"
    />-->

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_color"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/et_name"
        app:layout_constraintEnd_toEndOf="@+id/et_name"
        app:layout_constraintTop_toTopOf="@+id/et_name"
        android:src="@drawable/ic_baseline_choose_color_24"
        android:backgroundTint="@android:color/transparent"
        android:tint="@color/colorAccent"
        />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_all_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="All day"
        android:textSize="18sp"
        android:drawableStart="@drawable/ic_baseline_access_time_24"
        android:drawablePadding="3dp"
        android:gravity="center_vertical"
        android:checked="true"
        style="@style/Widget.AppCompat.CompoundButton.Switch"
        android:theme="@style/Widget.AppCompat.CompoundButton.Switch"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        app:useMaterialThemeColors="false"
        />

    <EditText
        android:id="@+id/et_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter description"
        android:inputType="textCapSentences"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_all_day"
        app:layout_constraintVertical_bias="0.042"
        android:importantForAutofill="no"/>

    <EditText
        android:id="@+id/et_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Enter place"
        android:textSize="20sp"
        android:inputType="textCapWords"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_description"
        app:layout_constraintStart_toStartOf="@+id/et_description"
        app:layout_constraintTop_toBottomOf="@+id/et_description"
        app:layout_constraintVertical_bias="0.0"
        android:importantForAutofill="no"/>


    <LinearLayout
        android:id="@+id/ll_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_place"
        app:layout_constraintStart_toStartOf="@+id/et_place"
        app:layout_constraintTop_toBottomOf="@+id/et_place"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/btn_choose_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"

            android:text="Choose start date"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_choose_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="Choose start time"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ll_start"
        app:layout_constraintStart_toStartOf="@+id/ll_start"
        app:layout_constraintTop_toBottomOf="@+id/ll_start"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/btn_choose_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Choose end date"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_choose_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Choose end time"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_manage_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ll_end"
        app:layout_constraintStart_toStartOf="@+id/ll_end"
        app:layout_constraintTop_toBottomOf="@+id/ll_end"
        app:layout_constraintVertical_bias="0.0"
        android:gravity="center"
        android:layout_marginTop="36dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_delete_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete event"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"/>

        <Button
            android:id="@+id/btn_add_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add event"
            android:onClick="onAddEventClick"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginHorizontal="20dp"/>

    </LinearLayout>

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.627"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <Button
        android:id="@+id/btn_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Pick color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ll_manage_event"
        app:layout_constraintStart_toStartOf="@+id/ll_manage_event"
        app:layout_constraintTop_toBottomOf="@+id/ll_manage_event"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_color"
        app:layout_constraintStart_toStartOf="@+id/btn_color"
        app:layout_constraintTop_toBottomOf="@+id/btn_color" />

</androidx.constraintlayout.widget.ConstraintLayout>