<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.ProjectOfMurad" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <!--<item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">@color/colorAccent</item>
        <!--<item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!-- ToDo custom secondary color that applies to buttons -->
<!--        <item name="colorSecondary">@color/teal_200</item>-->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
<!--        <item name="colorControlNormal"> @color/colorAccent</item>-->
<!--        <item name="materialTimePickerTheme">Widget.Material3.MaterialTimePicker.Custom</item>-->
        <!-- Customize your theme here. -->
        <!-- ToDo custom switchStyle -->
<!--        <item name="switchStyle">@style/Widget.App.Switch</item>-->

        <item name="bottomSheetDialogTheme">@style/MyBottomSheetDialogTheme</item>
        <item name="android:indeterminateDrawable">@drawable/ic_baseline_person_24</item>

    </style>


    <style name="Widget.Material3.MaterialTimePicker.Custom" parent="Widget.Material3.MaterialTimePicker">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:numbersSelectorColor">@color/colorAccent</item>
        <item name="android:headerTimeTextAppearance">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.ProjectOfMurad.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ProjectOfMurad.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ProjectOfMurad.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RoundedCornersDialog" parent="Theme.MaterialComponents.Light.Dialog">
<!--        <item name="dialogCornerRadius">16dp</item>-->
<!--        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>-->
<!--        <item name="android:windowAnimationStyle">@style/Animation.WindowSlideUpDown</item>-->
        <item name="android:windowAnimationStyle">@style/MyAnimationWindow</item>
<!--        <item name="android:background">@drawable/round_dialog_background</item>-->
    </style>

    <style name="Animation.WindowSlideUpDown" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="MyAnimationWindow" parent="@android:style/Animation.Activity">
<!--        <item name="android:windowEnterAnimation">@anim/anim_in</item>-->
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>
</resources>